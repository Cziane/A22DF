{
	"name": "JsonTOCMongo",
	"properties": {
		"activities": [
			{
				"name": "Json To Mongo",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "JsonSource",
						"storeSettings": {
							"type": "AzureBlobStorageReadSettings",
							"recursive": true,
							"enablePartitionDiscovery": false
						},
						"formatSettings": {
							"type": "JsonReadSettings"
						}
					},
					"sink": {
						"type": "CosmosDbMongoDbApiSink",
						"writeBatchTimeout": "00:30:00",
						"writeBehavior": "upsert"
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"mappings": [
							{
								"source": {
									"path": "$['address']['building']"
								},
								"sink": {
									"path": "$['address']['building']"
								}
							},
							{
								"source": {
									"path": "$['address']['coord'][0]"
								},
								"sink": {
									"path": "$['address']['coord'][0]"
								}
							},
							{
								"source": {
									"path": "$['address']['street']"
								},
								"sink": {
									"path": "$['address']['street']"
								}
							},
							{
								"source": {
									"path": "$['address']['zipcode']"
								},
								"sink": {
									"path": "$['address']['zipcode']"
								}
							},
							{
								"source": {
									"path": "$['borough']"
								},
								"sink": {
									"path": "$['borough']"
								}
							},
							{
								"source": {
									"path": "$['cuisine']"
								},
								"sink": {
									"path": "$['cuisine']"
								}
							},
							{
								"source": {
									"path": "$['grades'][0]['date']['$date']"
								},
								"sink": {
									"path": "$['grades'][0]['date']['$date']"
								}
							},
							{
								"source": {
									"path": "$['grades'][0]['grade']"
								},
								"sink": {
									"path": "$['grades'][0]['grade']"
								}
							},
							{
								"source": {
									"path": "$['grades'][0]['score']"
								},
								"sink": {
									"path": "$['grades'][0]['score']"
								}
							},
							{
								"source": {
									"path": "$['name']"
								},
								"sink": {
									"path": "$['name']"
								}
							},
							{
								"source": {
									"path": "$['restaurant_id']"
								},
								"sink": {
									"path": "$['restaurant_id']"
								}
							}
						],
						"collectionReference": ""
					}
				},
				"inputs": [
					{
						"referenceName": "Json1",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "CosmosDbMongoDbCollection1",
						"type": "DatasetReference"
					}
				]
			}
		],
		"annotations": []
	}
}